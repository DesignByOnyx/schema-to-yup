{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "baseUrl": "packages",
    "paths": {
      "@schema-validator/*": ["./*/lib"]
    }
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "**/__tests__/*.ts", "dist"]
}
